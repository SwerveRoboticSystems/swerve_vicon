<?xml version="1.0"?>

<!--
@file thor_utilities.xacro
@brief Utilitiy properties for THOR robot
@author Frederick Wachter - wachterfreddy@gmail.com
@date Created: 2018-04-20
-->

<robot name="thor" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="pi" value="3.14159" />
  <xacro:property name="chassis_mass" value="1.666" />
  <xacro:property name="motor_mass" value="0.22578" />
  <xacro:property name="wheel_mass" value="0.346" />
  <xacro:property name="mechanical_reduction" value="1" />

  <!-- Common geometry properties -->
  <xacro:property name="chassis_geometry">
    <geometry>
      <mesh filename="package://thor_description/meshes/chassis.stl" />
    </geometry>
  </xacro:property>

  <xacro:property name="motor_geometry">
    <geometry>
      <mesh filename="package://thor_description/meshes/motor.stl" />
    </geometry>
  </xacro:property>

  <xacro:property name="wheel_geometry">
    <geometry>
      <mesh filename="package://thor_description/meshes/wheel.stl" />
    </geometry>
  </xacro:property>

  <xacro:property name="lidar_geometry">
    <geometry>
      <mesh filename="package://sick_tim/meshes/sick_tim551.stl" />
    </geometry>
  </xacro:property>

  <xacro:property name="chassis_collision_geometry">
    <geometry>
      <cylinder length="0.0762" radius="0.2"/>
    </geometry>
  </xacro:property>

  <xacro:property name="motor_collision_geometry">
    <geometry>
      <box size="0.0376 0.08682 0.03865"/>
    </geometry>
  </xacro:property>

  <xacro:property name="wheel_collision_geometry">
    <geometry>
      <cylinder length="0.055" radius="0.045"/>
    </geometry>
  </xacro:property>

  <xacro:property name="lidar_collision_geometry">
    <geometry>
      <box size="0.075 0.06 0.08575"/>
    </geometry>
  </xacro:property>

  <!-- Color properties -->
  <xacro:property name="color_red">
    <material name="">
      <color rgba="1 0 0 1" />
    </material>
  </xacro:property>

  <xacro:property name="color_green">
    <material name="">
      <color rgba="0 1 0 1" />
    </material>
  </xacro:property>

  <xacro:property name="color_blue">
    <material name="">
      <color rgba="0 0 1 1" />
    </material>
  </xacro:property>

  <!-- Common visual and collision properties -->
  <xacro:property name="chassis_visual_collision">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <xacro:insert_block name="chassis_geometry" />
      <xacro:insert_block name="color_red" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <xacro:insert_block name="chassis_collision_geometry" />
    </collision>
  </xacro:property>

  <xacro:property name="motor_visual_collision">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <xacro:insert_block name="motor_geometry" />
      <xacro:insert_block name="color_green" />
    </visual>
    <collision>
      <origin xyz="0 0.0265 -0.0095" rpy="0 0 0" />
      <xacro:insert_block name="motor_collision_geometry" />
    </collision>
  </xacro:property>

  <xacro:property name="wheel_visual_collision">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <xacro:insert_block name="wheel_geometry" />
      <xacro:insert_block name="color_blue" />
    </visual>
    <collision>
      <origin xyz="0 0.01 0" rpy="${pi/2} 0 0" />
      <xacro:insert_block name="wheel_collision_geometry" />
    </collision>
  </xacro:property>

  <xacro:property name="lidar_visual_collision">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <xacro:insert_block name="lidar_geometry" />
      <xacro:insert_block name="color_blue" />
    </visual>
    <collision>
      <origin xyz="-0.009 0 -0.019585" rpy="0 0 0" />
      <xacro:insert_block name="lidar_collision_geometry" />
    </collision>
  </xacro:property>

  <!-- Common link/joint properties -->
  <xacro:property name="motor_inertial_properties">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <mass value="${motor_mass}" />
    <inertia ixx="0.0002675" ixy="0.0000101" ixz="-0.0000022" iyy="0.0000424" iyz="-0.0000368" izz="0.0002573" />
  </xacro:property>

  <xacro:property name="wheel_inertial_properties">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="${wheel_mass}" />
        <inertia ixx="0.0002079" ixy="0.0000046" ixz="0.0000001" iyy="0.0003299" iyz="-0.0000059" izz="0.0002115" />
  </xacro:property>

  <xacro:macro name="motor_joint" params="joint_name parent child x y theta hardware_interface">
    <joint name="${joint_name}" type="continuous">
      <origin xyz="${x} ${y} -0.00445" rpy="0 0 ${theta}" />
      <parent link="${parent}" />
      <child link="${child}" />
    </joint>

    <transmission name="${joint_name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${joint_name}">
        <hardwareInterface>hardware_interface/${hardware_interface}</hardwareInterface>
      </joint>
      <actuator name="${joint_name}_motor">
        <mechanicalReduction>${mechanical_reduction}</mechanicalReduction>
        <hardwareInterface>hardware_interface/${hardware_interface}</hardwareInterface>
      </actuator>
    </transmission>
  </xacro:macro>

  <xacro:macro name="wheel_joint" params="joint_name parent child hardware_interface">
    <joint name="${joint_name}" type="continuous">
      <origin xyz="0 -0.045 0" rpy="0 0 0" />
      <parent link="${parent}" />
      <child link="${child}" />
      <axis xyz="0 1 0" />
    </joint>

    <transmission name="${joint_name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${joint_name}">
        <hardwareInterface>hardware_interface/${hardware_interface}</hardwareInterface>
      </joint>
      <actuator name="${joint_name}_motor">
        <mechanicalReduction>${mechanical_reduction}</mechanicalReduction>
        <hardwareInterface>hardware_interface/${hardware_interface}</hardwareInterface>
      </actuator>
    </transmission>
  </xacro:macro>

</robot>


